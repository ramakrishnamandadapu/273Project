<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brengarajulu.gimbaltrackerv3.MyPreferences">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Welcome to IntelliCart"
            android:id="@+id/textView"
            android:height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:background="#ffb00f09"

            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView"
            android:layout_marginTop="24dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/becondetails"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Do not send promotions for:"  android:textColor="@android:color/black"
                android:id="@+id/textView2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcohol"
                android:id="@+id/chkAlcohol" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meat"
                android:id="@+id/chkMeat" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tobacco"
                android:id="@+id/chkTobacco" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:id="@+id/chkAll" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Add Custom:"  android:textColor="@android:color/black"
                android:id="@+id/txtCustomPreference" />

            <EditText
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:inputType="text|textCapWords|textNoSuggestions"
                android:id="@+id/txtCustomExclusion" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="GO Back"
                    android:id="@+id/btnHome"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/holo_red_dark" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Save"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnSave"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/holo_green_dark"
                    android:textColor="@android:color/white" />



            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>

</RelativeLayout>

