<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  YOUR INTELLICART  "
            android:id="@+id/textView"
            android:height="30dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:background="#ffb00f09"
            android:textStyle="bold"
            android:singleLine="false"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:typeface="sans" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView"
            android:layout_marginTop="0dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/becondetails"
            android:weightSum="1"
            android:showDividers="end">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgPreference"
                android:layout_gravity="right"
                android:src="@drawable/settings"
               />


            <TextView android:id="@+id/txtplace"  android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="WELCOME TO INTELLIMART"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <TextView android:id="@+id/txtVisitTime"  android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <TextView android:id="@+id/txtbeacon" android:text="Beacon status: " android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17dp" />

            <TextView
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:layout_marginTop="5dp"
                android:id="@+id/txtCommunication"
                android:layout_weight="0.35"
                android:background="@android:color/white"
                style="@android:style/Animation.Toast" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate this"
                android:id="@+id/textView3" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share this. Enter email address to share:"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/textShare" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="rbalaji.net@gmail.com"
                android:ems="10"
                android:id="@+id/txtEmail"
                android:editable="true" />

            <Button
                style="@android:style/Widget.Material.Light.Button.Small"
                android:layout_width="65dp"
                android:layout_height="29dp"
                android:text="Share"
                android:id="@+id/btnShare"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:layout_gravity="center_horizontal"
               />


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
